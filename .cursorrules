# Name List Project Commit Rules

# Commit Message Format
format:
  title: "<type>(<scope>): <description>"
  description: "Detailed description (optional)"

# Commit Types
types:
  - feat     # New feature
  - fix      # Bug fix
  - refactor # Code refactoring
  - style    # Style changes (whitespace, formatting, punctuation etc.)
  - docs     # Documentation changes
  - test     # Adding or modifying tests
  - chore    # Configuration, build etc. changes
  - perf     # Performance improvements

# Commit Scopes
scopes:
  - auth     # Authentication related changes
  - ui       # User interface changes
  - api      # API related changes
  - db       # Database related changes
  - core     # Core functions
  - config   # Configuration changes
  - deps     # Dependency updates

# Rules
rules:
  - title_max_length: 72     # Maximum title length
  - description_max_length: 500  # Maximum description length
  - require_scope: false     # Scope is not required
  - require_description: false  # Detailed description is not required

# Examples
examples:
  - "feat(ui): added search and filtering for name list"
  - "fix(api): fixed connection error"
  - "refactor(core): rewrote name addition function"
  - "style(ui): adjusted button styles"
  - "docs: updated README"
  - "test(auth): added login tests"
  - "chore(deps): updated packages"
  - "perf(db): improved query performance"

# Commit Message Template
template: |
  <type>(<scope>): <description>

  Detailed Description:
  - Changes made
  - Reason for change
  - Affected areas

  Related Issue: #123 